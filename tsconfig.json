{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "sourceMap": true,
        "noErrorTruncation": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ]
}
